<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:id="@+id/cv_ticket"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/im_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:padding="5dp"

                android:layout_marginEnd="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_alignTop="@+id/tv_ticket"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/menu_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp" />

            <ImageView
                android:id="@+id/im_call"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/tv_ticket"
                android:layout_marginEnd="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"

                android:paddingEnd="10dp"

                android:paddingStart="10dp"
                android:src="@drawable/call_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp" />
            <ImageView
                android:id="@+id/im_user"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"

                android:src="@drawable/user" />

            <TextView
                android:id="@+id/tv_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/im_user"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"

                android:layout_toEndOf="@+id/im_user"
                android:layout_toRightOf="@+id/im_user"
                android:text="Ticket: 55477"
                android:textColor="@color/edittexttheme"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_alignLeft="@+id/tv_ticket"
                android:layout_alignStart="@+id/tv_ticket"
                android:layout_below="@+id/tv_ticket"
                android:layout_toEndOf="@+id/im_user"
                android:layout_toRightOf="@+id/im_user"

                android:text="Green City Central"
                android:textColor="@color/themecolor"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/linear"
                android:layout_margin="8dp"

                android:layout_alignEnd="@id/linear"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_alignRight="@id/linear">

                <!--<ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:src="@drawable/date_icon" />-->

                <!-- <TextView
                     android:id="@+id/tv_date"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="18-1-2019"
                     android:textSize="15sp"

                     android:textColor="@color/edittexttheme"


                     />-->


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:weightSum="3"
                android:layout_margin="10dp"

                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="3dp"
                    android:src="@drawable/status_icon" />

                <TextView

                    android:layout_weight="2"
                    android:id="@+id/status"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Status:Commercial Feasibility Done"
                    android:textSize="14sp"
                    android:textColor="@color/edittexttheme"

                    />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18-1-2019"
                    android:textSize="15sp"
                    android:gravity="end"

                    android:layout_gravity="center|end"
                    android:textColor="@color/edittexttheme"


                    />
            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>